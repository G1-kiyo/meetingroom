<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.format_project.meeting.mapper.MeetingRoomMapper">

<select id="selectAllMeetingRoomInfo" resultType="com.format_project.meeting.model.entity.MeetingRoom">
    SELECT * FROM meetingroom;
</select>

<select id="selectMeetingRoomInfoByRoomId" parameterType="String" resultType="com.format_project.meeting.model.entity.MeetingRoom">
    SELECT * FROM meetingroom WHERE roomId=#{roomId};
</select>

<update id="updateMeetingRoomStatus">
    UPDATE meetingroom SET status = #{status} WHERE roomId=#{roomId}
</update>

</mapper>