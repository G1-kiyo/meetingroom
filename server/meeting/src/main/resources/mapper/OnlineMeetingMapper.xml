<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.format_project.meeting.mapper.OnlineMeetingMapper">

<resultMap id="onlineMeetingResult" type="com.format_project.meeting.model.entity.OnlineMeeting">
        <result column="meetingId" property="meetingId" />
        <result column="userId" property="userId" />
        <result column="meetingType" property="meetingType" />
        <result column="topic" property="topic" />
        <result column="meetingDate" property="scheduleMeetingDate" />
        <result column="startTime" property="scheduleStartTime" />
        <result column="endTime" property="scheduleEndTime" />
        <result column="timespan" property="scheduleTimespan" />
        <result column="isInvited" property="isInvited" />
        <result column="createTime" property="createTime" />
</resultMap>

<select id="loadUpcomingOnlineMeeting" resultMap="onlineMeetingResult">
        SELECT * FROM online_meeting WHERE meetingDate=#{date} AND userId=#{userId};
</select>

</mapper>